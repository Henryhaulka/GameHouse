
<div class = "row mb-5">
  <% @soccer.each do |soccer| %>
    <div class= "col-md-3">
      <%= image_tag soccer.image.url, class:"img-fluid soccer" %>
    </div>
    <div class= "col-md-3 mt-2">
      <div>
       <h3 class= 'text-primary'><%= soccer.title %></h3> 
       <hr>
      </div>
      <div>
        <%= soccer.text %>
      </div>
    </div>
<% end %>
</div><br><br><br>


